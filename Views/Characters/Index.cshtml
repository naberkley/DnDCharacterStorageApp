@model IEnumerable<DnDCharacterStorageApp.Models.Character>

@{
    ViewData["Title"] = "Index";
}

<h1>Characters</h1>

<p>
    <a asp-action="Create">New Character</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Class)</th>
            <th>@Html.DisplayNameFor(model => model.Level)</th>
            <th>Username</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Class)</td>
            <td>@Html.DisplayFor(modelItem => item.Level)</td>
            <td>@Html.Raw(item.CreatedBy?.UserName)</td>
            <td>
                @if (item.CreatedById == ViewData["UserId"]?.ToString())
                {
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <text> | </text>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    <text> | </text>
                }
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
            </td>
        </tr>
    }
    </tbody>
</table>
